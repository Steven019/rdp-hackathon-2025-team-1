{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Type Checker",
            "detail": "Run the mypy type checker on current repository",
            "type": "shell",
            "command": "python -m mypy --explicit-package-bases .",
            "problemMatcher": "error",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Unit Tests (pytest)",
            "detail": "Run unit tests on current repository with code coverage",
            "type": "shell",
            "command": "python -m pytest --cov --cov-report=html:reports/cover/pytest",
            "problemMatcher": "error",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run Streamlit App",
            "detail": "Run the streamlit web application",
            "type": "shell",
            "command": "set -a && source .env && set +a && python -m streamlit run streamlit_app/app.py",
            "problemMatcher": "error",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}